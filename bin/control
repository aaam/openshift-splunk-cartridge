#!/bin/bash
source $OPENSHIFT_CARTRIDGE_SDK_BASH

function run_hook() {
  local path="$OPENSHIFT_REPO_DIR/.openshift/action_hooks/$1"
  if [ -f "$path" -a -x "$path" ]
  then
    "$path"
  else
    return 0
  fi
}

function start() {
    echo "Starting Splunk cart"
    ${OPENSHIFT_DATA_DIR}/splunk/bin/splunk start --answer-yes --no-prompt --accept-license
    run_hook start
}

function stop() {
    echo "Stopping Splunk cart"
    ${OPENSHIFT_DATA_DIR}/splunk/bin/splunk stop
    run_hook stop
}

function restart() {
    echo "Restarting Splunk cart"
    stop
    start
}

function status() {
   if output=$(curl http://$OPENSHIFT_SPLUNK_IP:$OPENSHIFT_SPLUNK_PORT/ui 2>&1 )
   then
      client_result "Application is running"
   else
      client_result "Application is either stopped or inaccessible"
   fi
}

function reload() {
    client_result "Reloading Splunk cart"
    restart
}

function tidy() {
  client_message "Emptying log dir: $OPENSHIFT_SPLUNK_LOG_DIR"
  shopt -s dotglob
  # Need to confirm if the below directory even exists
  #rm -rf $OPENSHIFT_SPLUNK_LOG_DIR/*
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  status)    status ;;
  reload)    reload ;;
  tidy)      tidy ;;
  *)         exit 0
esac
