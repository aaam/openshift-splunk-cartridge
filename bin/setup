#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Create additional directories required by the diy cartridge
mkdir -p $OPENSHIFT_DIY_DIR/{logs,run}

mkdir -p ${OPENSHIFT_HOMEDIR}/.splunk

sed -e "s/`echo '$EMPTY_OPENSHIFT_SPLUNK_PORT'`/`echo $OPENSHIFT_HOMEDIR`/" $OPENSHIFT_DATA_DIR/splunk/web.conf.template > $OPENSHIFT_DATA_DIR/splunk/web.conf
sed -e "s/`echo '$EMPTY_HOSTNAME'`/`echo $HOSTNAME`/" $OPENSHIFT_HOMEDIR/splunk/inputs.conf.template > $OPENSHIFT_DATA_DIR/splunk/inputs.conf
sed -e "s/`echo '$EMPTY_HOSTNAME'`/`echo $HOSTNAME`/" $OPENSHIFT_HOMEDIR/splunk/server.conf.template > $OPENSHIFT_DATA_DIR/splunk/server.conf
sed -e "s/`echo '$EMPTY_HOSTNAME'`/`echo $HOSTNAME`/" $OPENSHIFT_HOMEDIR/splunk/migration.conf.template > $OPENSHIFT_DATA_DIR/splunk/migration.conf
sed -e "s/`echo '$EMPTY_OPENSHIFT_SPLUNK_IP'`/`echo $OPENSHIFT_SPLUNK_IP`/" $OPENSHIFT_HOMEDIR/splunk/splunk-launch.conf.template > $OPENSHIFT_DATA_DIR/splunk/splunk-launch.conf



client_result "Disclaimer: This is an experimental cartridge that comes provided AS IS."
